{
  "name": "wasm-raytracer",
  "version": "1.0.4",
  "collaborators": [
    "KentaKudo <yd37574@gmail.com>"
  ],
  "license": "MIT",
  "scripts": {
    "build": "pnpm run build:browser && pnpm run build:node",
    "build:browser": "wasm-pack build --target web --out-dir ./pkg/browser && rimraf ./pkg/browser/package.json",
    "build:node": "wasm-pack build --target nodejs --out-dir ./pkg/node && rimraf ./pkg/node/package.json",
    "build:profiling": "wasm-pack build --profiling",
    "test": "wasm-pack test --firefox --headless"
  },
  "sideEffects": false,
  "files": [
    "noop.js",
    "pkg/**"
  ],
  "types": "./pkg/browser/wasm_raytracer.d.ts",
  "exports": {
    ".": {
      "browser": "./pkg/browser/wasm_raytracer.js",
      "node": "./pkg/node/wasm_raytracer.js"
    },
    "./binary.wasm": {
      "browser": "./pkg/browser/wasm_raytracer_bg.wasm",
      "node": "./noop.js"
    }
  },
  "devDependencies": {
    "rimraf": "^3.0.2"
  }
}
